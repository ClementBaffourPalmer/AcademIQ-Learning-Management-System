@model AcademIQ_LMS.Models.Course

@{
    ViewData["Title"] = "Create Course";
    var userRole = Context.Session.GetString("UserRole");
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">Create New Course</h2>
            </div>
            <div class="card-body">
                <form asp-controller="Course" asp-action="Create" method="post">
                    @Html.AntiForgeryToken()

                    <!-- Validation Summary -->
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Teacher Dropdown (Only for Admin) -->
                    @if (userRole == "Admin" && ViewBag.Teachers != null)
                    {
                        <div class="mb-3">
                            <label asp-for="TeacherId" class="form-label">Assign to Teacher</label>
                            <select asp-for="TeacherId" class="form-select" id="TeacherId" required>
                                <option value="">-- Select a Teacher --</option>
                                @foreach (var teacher in ViewBag.Teachers)
                                {
                                    <option value="@teacher.Id">
                                        @teacher.FirstName @teacher.LastName
                                    </option>
                                }
                            </select>
                            <span asp-validation-for="TeacherId" class="text-danger"></span>
                        </div>
                    }

                    <!-- Course Title -->
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">Course Title</label>
                        <input asp-for="Title" class="form-control" id="Title" required />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" id="Description" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Buttons -->
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" asp-controller="Course" class="btn btn-secondary">
                            Back to List
                        </a>
                        <button type="submit" class="btn btn-success">
                            Create Course
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>
        $(document).ready(function () {
            $('form').on('submit', function (e) {
                console.log('Form submitted');

                var title = $('#Title').val()?.trim();
                var description = $('#Description').val()?.trim();
                var teacherId = $('#TeacherId').val();

                if (!title) {
                    alert('Please enter a course title');
                    e.preventDefault();
                    return false;
                }

                // Optional: enforce description requirement
                if (!description) {
                    alert('Please enter a course description');
                    e.preventDefault();
                    return false;
                }

                console.log('Form data:', {
                    title: title,
                    description: description,
                    teacherId: teacherId
                });
            });
        });
    </script>
}
