@model IEnumerable<AcademIQ_LMS.Models.Course>

@{
    ViewData["Title"] = "Courses";
    var userRole = Context.Session.GetString("UserRole");
}

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body text-center">
                <img src="~/images/Trip picture .jpeg" alt="Trip Picture" class="img-fluid rounded" style="max-height: 200px; width: auto;" />
                <h4 class="mt-3">Course Management</h4>
                <p class="text-muted">Explore and manage your educational courses</p>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Courses</h1>
    <div>
        @if (userRole == "Admin" || userRole == "Teacher")
        {
            <a asp-action="Create" class="btn btn-primary">Create New Course</a>
        }
        @if (userRole == "Student")
        {
            <a asp-action="AvailableCourses" class="btn btn-success">Browse Available Courses</a>
        }
    </div>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <h4 class="alert-heading">No courses found!</h4>
        <p>
            @if (userRole == "Student")
            {
                <span>You are not enrolled in any courses yet. <a asp-action="AvailableCourses" class="alert-link">Browse available courses</a> to get started!</span>
            }
            else
            {
                <span>No courses have been created yet.</span>
            }
        </p>
    </div>
}
else
{
    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@course.Title</h5>
                        <p class="card-text">@course.Description</p>
                        <p class="card-text">
                            <small class="text-muted">
                                <strong>Teacher:</strong> @course.Teacher?.FirstName @course.Teacher?.LastName<br>
                                <strong>Created:</strong> @course.CreatedAt.ToString("MMM dd, yyyy")
                            </small>
                        </p>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-outline-primary btn-sm">View Details</a>
                            @if (userRole == "Admin" || (userRole == "Teacher" && course.TeacherId == int.Parse(Context.Session.GetString("UserId") ?? "0")))
                            {
                                <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-outline-secondary btn-sm">Edit</a>
                            }
                            @if (userRole == "Student")
                            {
                                <form asp-action="Unenroll" method="post" style="display: inline;">
                                    <input type="hidden" name="courseId" value="@course.Id" />
                                    <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you sure you want to unenroll from this course?')">Unenroll</button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
} 