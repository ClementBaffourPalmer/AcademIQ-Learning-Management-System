@model IEnumerable<AcademIQ_LMS.Models.Course>

@{
    ViewData["Title"] = "Available Courses";
}

<div class="row mb-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body text-center">
                <img src="~/images/Trip picture .jpeg" alt="Trip Picture" class="img-fluid rounded" style="max-height: 200px; width: auto;" />
                <h4 class="mt-3">Available Courses</h4>
                <p class="text-muted">Browse and enroll in courses that interest you</p>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Available Courses</h1>
    <a asp-action="Index" class="btn btn-secondary">My Enrolled Courses</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <h4 class="alert-heading">No available courses!</h4>
        <p>There are no courses available for enrollment at the moment.</p>
    </div>
}
else
{
    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@course.Title</h5>
                        <p class="card-text">@course.Description</p>
                        <p class="card-text">
                            <small class="text-muted">
                                <strong>Teacher:</strong> @course.Teacher?.FirstName @course.Teacher?.LastName<br>
                                <strong>Created:</strong> @course.CreatedAt.ToString("MMM dd, yyyy")
                            </small>
                        </p>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-outline-primary btn-sm">View Details</a>
                            <form asp-action="Enroll" method="post" style="display: inline;">
                                <input type="hidden" name="courseId" value="@course.Id" />
                                <button type="submit" class="btn btn-success btn-sm">Enroll</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
} 