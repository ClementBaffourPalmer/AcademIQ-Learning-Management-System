@model AcademIQ_LMS.Models.Course

@{
    ViewData["Title"] = "Course Details";
    var userRole = Context.Session.GetString("UserRole");
    var userId = Context.Session.GetString("UserId");
}

<div class="course-details-container">
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Course Details</h4>
                    <div>
                        <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-arrow-left me-1"></i> Back to Courses
                        </a>
                        @if (userRole == "Admin" || (userRole == "Teacher" && Model.TeacherId == int.Parse(userId ?? "0")))
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary btn-sm ms-2">
                                <i class="bi bi-pencil me-1"></i> Edit Course
                            </a>
                        }
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <!-- Course Overview -->
                        <div class="col-md-8">
                            <h2 class="mb-3">@Model.Title</h2>
                            <p class="lead mb-4">@Model.Description</p>

                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <div class="course-info-section">
                                        <h6 class="text-muted mb-2">Course Info</h6>
                                        <ul class="list-unstyled">
                                            <li class="mb-2">
                                                <i class="bi bi-person-fill text-primary me-2"></i>
                                                <strong>Teacher:</strong> @Model.Teacher?.FirstName @Model.Teacher?.LastName
                                            </li>
                                            <li class="mb-2">
                                                <i class="bi bi-calendar-event text-info me-2"></i>
                                                <strong>Created:</strong> @Model.CreatedAt.ToString("MMMM dd, yyyy")
                                            </li>
                                            <li class="mb-2">
                                                <i class="bi bi-check-circle-fill text-success me-2"></i>
                                                <strong>Status:</strong>
                                                @if (Model.IsActive)
                                                {
                                                    <span class="badge bg-success">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Inactive</span>
                                                }
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="course-stats-section">
                                        <h6 class="text-muted mb-2">Course Stats</h6>
                                        <ul class="list-unstyled">
                                            <li class="mb-2">
                                                <i class="bi bi-file-earmark-text text-warning me-2"></i>
                                                <strong>Contents:</strong> @(Model.Contents?.Count ?? 0)
                                            </li>
                                            <li class="mb-2">
                                                <i class="bi bi-question-circle text-info me-2"></i>
                                                <strong>Quizzes:</strong> @(Model.Quizzes?.Count ?? 0)
                                            </li>
                                            <li class="mb-2">
                                                <i class="bi bi-people text-primary me-2"></i>
                                                <strong>Enrollments:</strong> @(Model.Enrollments?.Count ?? 0)
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Course Summary Card -->
                        <div class="col-md-4">
                            <div class="card course-summary-card">
                                <div class="card-body text-center">
                                    <i class="bi bi-book" style="font-size: 3rem;"></i>
                                    <h5 class="mt-3">Course ID: @Model.Id</h5>
                                    <p class="text-muted">Course Management System</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Course Content Section -->
    @if (Model.Contents?.Any() == true)
    {
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-file-earmark-text me-2"></i>Course Content
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var content in Model.Contents)
                            {
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="card content-card h-100">
                                        <div class="card-body">
                                            <h6 class="card-title">@content.Title</h6>
                                            <p class="card-text small">@content.Description</p>
                                            <small class="text-muted">
                                                <i class="bi bi-calendar me-1"></i> @content.UploadedAt.ToString("MMM dd, yyyy")
                                            </small>
                                        </div>
                                        <div class="card-footer">
                                            <a href="@content.FilePath" class="btn btn-outline-primary btn-sm w-100" target="_blank">
                                                <i class="bi bi-download me-1"></i>Download
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Course Quizzes Section -->
    @if (Model.Quizzes?.Any() == true)
    {
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-question-circle me-2"></i>Course Quizzes
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var quiz in Model.Quizzes)
                            {
                                <div class="col-md-6 col-lg-4 mb-3">
                                    <div class="card quiz-card h-100">
                                        <div class="card-body">
                                            <h6 class="card-title">@quiz.Title</h6>
                                            <p class="card-text small">@quiz.Description</p>
                                            <small class="text-muted">
                                                <i class="bi bi-clock me-1"></i> @quiz.TimeLimitMinutes minutes
                                            </small>
                                        </div>
                                        <div class="card-footer">
                                            <a asp-controller="Quiz" asp-action="Take" asp-route-id="@quiz.Id" class="btn btn-outline-success btn-sm w-100">
                                                <i class="bi bi-play-circle me-1"></i>Take Quiz
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Empty State -->
    @if (!(Model.Contents?.Any() == true || Model.Quizzes?.Any() == true))
    {
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-info text-center">
                    <i class="bi bi-info-circle me-2"></i>
                    <strong>No content or quizzes available yet.</strong>
                    <p class="mb-0 mt-2">This course doesn't have any uploaded resources or assessments at the moment.</p>
                </div>
            </div>
        </div>
    }
</div>
