@model AcademIQ_LMS.Models.Quiz

@{
    ViewData["Title"] = "Edit Quiz";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h2>Edit Quiz</h2>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    
                    <div class="mb-3">
                        <label asp-for="CourseId" class="form-label">Course</label>
                        <select asp-for="CourseId" class="form-select" required>
                            <option value="">Select Course</option>
                            @if (ViewBag.AvailableCourses != null)
                            {
                                @foreach (var course in ViewBag.AvailableCourses)
                                {
                                    <option value="@course.Id" selected="@(course.Id == Model.CourseId)">@course.Title - @course.Teacher.FirstName @course.Teacher.LastName</option>
                                }
                            }
                        </select>
                        <span asp-validation-for="CourseId" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label">Quiz Title</label>
                        <input asp-for="Title" class="form-control" required />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="DueDate" class="form-label">Due Date (Optional)</label>
                                <input asp-for="DueDate" type="datetime-local" class="form-control" />
                                <span asp-validation-for="DueDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="TimeLimitMinutes" class="form-label">Time Limit (Minutes)</label>
                                <input asp-for="TimeLimitMinutes" type="number" class="form-control" min="0" value="@Model.TimeLimitMinutes" />
                                <div class="form-text">0 = No time limit</div>
                                <span asp-validation-for="TimeLimitMinutes" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 