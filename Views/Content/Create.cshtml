@model AcademIQ_LMS.Models.Content

@{
    ViewData["Title"] = "Upload Content";
    var userRole = Context.Session.GetString("UserRole");
}

<div class="row justify-content-center mt-4">
    <div class="col-md-8">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-primary text-white">
                <h2 class="mb-0">Upload Content</h2>
            </div>
            <div class="card-body">
                <form asp-controller="Content" asp-action="Create" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <!-- Validation Summary -->
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Course dropdown -->
                    @if (ViewBag.CourseId != null)
                    {
                        <!-- Pre-selected course (passed in query) -->
                        <input type="hidden" asp-for="CourseId" value="@ViewBag.CourseId" />
                        <div class="mb-3">
                            <label class="form-label">Course</label>
                            <input type="text" class="form-control" value="@ViewBag.CourseTitle" readonly />
                        </div>
                    }
                    else
                    {
                        <div class="mb-3">
                            <label asp-for="CourseId" class="form-label">Select Course</label>
                            <select asp-for="CourseId" asp-items="ViewBag.AvailableCourses" class="form-select">
                                <option value="">-- Select Course --</option>
                            </select>
                            <span asp-validation-for="CourseId" class="text-danger"></span>
                        </div>
                    }

                    <!-- Title -->
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <!-- Description -->
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <!-- Content Type -->
                    <div class="mb-3">
                        <label asp-for="Type" class="form-label"></label>
                        <select asp-for="Type" class="form-select">
                            <option value="">-- Select Type --</option>
                            <option value="PDF">PDF</option>
                            <option value="DOC">DOC</option>
                            <option value="TXT">TXT</option>
                        </select>
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>

                    <!-- File upload -->
                    <div class="mb-3">
                        <label for="file" class="form-label">File</label>
                        <input type="file" name="file" class="form-control" />
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        <button type="submit" class="btn btn-success">Upload Content</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
} 