@model IEnumerable<AcademIQ_LMS.Models.Content>

@{
    ViewData["Title"] = "Content";
    var userRole = Context.Session.GetString("UserRole");
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Content</h1>
    @if (userRole == "Admin" || userRole == "Teacher")
    {
        <a asp-action="Create" class="btn btn-primary">Upload Content</a>
    }
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <h4 class="alert-heading">No content found!</h4>
        <p>No educational content has been uploaded yet.</p>
    </div>
}
else
{
    <div class="row">
        @foreach (var content in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">@content.Title</h5>
                        <p class="card-text">@content.Description</p>
                        <p class="card-text">
                            <small class="text-muted">
                                <strong>Type:</strong> @content.Type<br>
                                <strong>Course:</strong> @content.Course?.Title<br>
                                <strong>Uploaded:</strong> @content.UploadedAt.ToString("MMM dd, yyyy")<br>
                                <strong>Size:</strong> @(content.FileSize / 1024) KB
                            </small>
                        </p>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-between">
                            <a asp-action="Download" asp-route-id="@content.Id" class="btn btn-outline-primary btn-sm">Download</a>
                            @if (userRole == "Admin" || content.UploadedById == int.Parse(Context.Session.GetString("UserId") ?? "0"))
                            {
                                <form asp-action="Delete" asp-route-id="@content.Id" method="post" style="display: inline;">
                                    <button type="submit" class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you sure you want to delete this content?')">Delete</button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
} 